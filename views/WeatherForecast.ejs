  <body>
    <!-- Main container -->
    <h3 class="DisplayH" style="padding-bottom:15px;">Weather Forecast For Seven Days</h3>
   
    <div class="container">  
            <fieldset>
              
                
        <div class="card-deck">

          <div class="card card-accent-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">Minimum Temperature</div>
            <div class="card-body text-dark">
            <h5 class="card-title"> Next Week:</h5>
            <ul>
              
            </ul>
            </div>              
         </div>
           
                            

            <div class="card card-accent-dark mb-3" style="max-width: 18rem;">
                <div class="card-header">Maximum Temperature</div>
                <div class="card-body text-dark">
                <h5 class="card-title"> Next Week:</h5>
                <ul>
                  <% for (var i = 0; i < maxTemperatures.length; i++) { %>
                 <p><li><%= maxTemperatures[i] %> Â°C </li></p> 
                  <% } %>
                </ul>
                </div>              
             </div>
                        
                        

             <div class="card card-accent-dark mb-3" style="max-width: 18rem;">
                  <div class="card-header">Wind Speed</div>
                      <div class="card-body text-dark">
                      <h5 class="card-title">Average for seven days</h5>
                      <p class="card-text"><!--<%=   %> --></p>
                       </div>
               </div>


               <div class="card card-accent-dark mb-3" style="max-width: 18rem;">
                <div class="card-header">Wind Direction</div>
                <div class="card-body text-dark">
                <h5 class="card-title">Direction seven days:</h5>
                <p class="card-text"> <!-- <%=   %> --></p>
                </div>              
             </div>
                          
        </div>
     </fieldset>
